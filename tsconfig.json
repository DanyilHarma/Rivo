{
    "compilerOptions": {
        "lib": [
            "dom",
            "es6"
        ],
        "target": "es6",
        "moduleResolution": "Node16",
        "module": "Node16",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "eslint.config.js",
        "node_modules",
        "build"
    ]
}